Xft.dpi:96
Xft.antialias:1
Xft.autohint: 0
Xft.hinting:1
Xft.hintstyle:hintslight
Xft.rgba:rgb
Xft.lcdfilter:lcddefault


! general setting
URxvt.multichar_encoding:utf-8
URxvt.termName:rxvt-unicode-256color
URxvt.loginShell:true
URxvt.geometry:160x50

URxvt*borderLess:false
URxvt*cursorBlink:true
URxvt*jumpScroll:true
URxvt*scrollBar:false
URxvt*scrollTtyOutput:false
URxvt*scrollTtyKeypress:true

! Cursor
URxvt.cursorBlink:true
URxvt.cursorUnderline:false

! Pointer
URxvt.pointerBlank:true

! input
URxvt.inputMethod:fcitx

! urxvt look
URxvt.transparent:false

! how many lines you want it to save per session
URxvt.saveLines:65535

! urxvt font
URxvt.font:xft:DejaVu Sans Mono:pixelsize=18:style:Regular:antialias=true, \
           xft:文泉驿等宽微米黑:pixelsize=18:style:Regular:antialias=true
URxvt.boldfont:xft:DejaVu Sans Mono:pixelsize=18:style:Bold:antialias=true, \
           xft:文泉驿等宽微米黑:pixelsize=18:style:Bold:antialias=true

! theme
#include ".Xdefaults.d/colors/solarized_dark"

! misc
URxvt*urgentOnBell:true
URxvt*visualBell:false

! urxvt extension
URxvt.perl-ext-common: default,selection-to-clipboard
